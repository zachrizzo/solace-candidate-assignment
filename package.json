{
  "name": "solace-candidate-assignment",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "generate": "drizzle-kit generate",
    "migrate:up": "node ./db/migrate.js",
    "seed": "node ./db/seed/index.js",
    "check-docker": "if command -v docker >/dev/null 2>&1 && docker info >/dev/null 2>&1; then echo 'Docker is running' && exit 0; else echo 'Docker is not running. Using mock data instead.' && exit 1; fi",
    "start-docker": "(npm run check-docker && docker compose up -d) || echo 'Continuing without Docker'",
    "setup-db": "(npm run start-docker && sleep 3 && npx drizzle-kit push:pg && npm run seed) || npm run seed",
    "start-dev": "npm run setup-db && npm run dev",
    "start-with-docker": "./start-with-docker.sh",
    "start-db-no-seed": "./start-without-seeding.sh"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^5.1.1",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@xenova/transformers": "^2.17.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.32.1",
    "framer-motion": "^12.5.0",
    "lucide-react": "^0.482.0",
    "next": "^14.2.19",
    "next-themes": "^0.4.6",
    "openai": "^4.87.3",
    "pgvector": "^0.2.0",
    "postgres": "^3.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "vector-storage": "^1.0.55"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "drizzle-kit": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4"
  }
}
